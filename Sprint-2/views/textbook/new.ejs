<div class="container  my-5">
    <form action='/books' method='POST' enctype="multipart/form-data">

        <div class="row mb-3">
            <div class="col-md-1">
                <label for="title" class="form-label fw-bold">Title:</label>
            </div>
            <div class="col-md-11">
                <input class="form-control bg-light text-dark border-0" type="text" id="title"
                name="title" placeholder="Ex: Computer Organization and Design RISC-V Edition" required>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-1">
                <label for="author" class="form-label fw-bold">Author:</label>
            </div>
            <div class="col-md-11">
                <input class="form-control bg-light text-dark border-0" type="text"
                    id="author" name="author" placeholder="Ex: David Patterson, John Hennessy" required>
            </div>
            
        </div>

    
        <div class="row mb-3">
            <div class="col-md-1">
                <label for="isbn" class="form-label fw-bold">ISBN:</label>
            </div>
            <div class="col-md-11">
                <input class="form-control bg-light text-dark border-0" type="text" id="isbn" name="isbn"
                placeholder="Ex: 9780128122761" required>
            </div>
        </div>

    
        <div class="row mb-3">
            <div class="col-lg-1">
                <label for="condition" class="form-label fw-bold">Condition:</label>
            </div>
            <div class="col-lg-11">
                <textarea class="form-control bg-light text-dark border-0" id="condition"
                        name="condition" placeholder="Ex: Pages 120-136 are missing, my dog ate them." required></textarea>
            </div>

        </div>

        <div class="row mb-3">

            <div class="col-md-1">
                <label for="price" class="form-label fw-bold">Price:</label>
            </div>

            <div class="col-md-11">
                <input class="form-control bg-light text-dark border-0" type="text" id="price"
                        name="price" placeholder="Ex: 1,2,50,100" required></input>
            </div>

        </div>

        <div class="row mb-5">
            <div class="col-md-1">
                <label for="image" class="form-label fw-bold">Image:</label>
            </div>
            <div class="col-md-11">
                <input class="form-control" type="file" id="image" name="img">
            </div>
        </div>
            


        <div class="text-center">
            <input class="btn btn-success btn-lg" type="submit" value="Submit">
        </div>
    </form>
</div>

