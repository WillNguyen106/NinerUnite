<h2 class="text-center mt-5">Edit</h2>

<!-- Receiving the Textbook -->
<div class="position-absolute top-50 start-50 translate-middle">
    <form action="/books/<%= book.id%>?_method=PUT" method='POST'>
        <table>
            <tr>
                <td><label for="title" class="fw-bold">Title:</label></td>
                <td><input class="align-middle p-3 mb-2 bg-light text-dark border-0 w-100" type="text" id="title"
                        name="title" placeholder="Ex: Computer Organization and Design RISC-V Edition" value="<%= book.title%>" required></td>
            </tr>
            <tr>
                <td><label for="author" class="fw-bold">Author:</label></td>
                <td><input class="align-middle p-3 mb-2 bg-light text-dark border-0 w-100" type="text"
                        id="author" name="author" placeholder="Ex: David Patterson, John Hennessy" value="<%= book.author%>" required></td>
            </tr>
            <tr>
                <td><label for="isbn" class="fw-bold">ISBN:</label></td>
                <td><input class="align-middle p-3 mb-2 bg-light text-dark border-0 w-100" id="isbn" name="isbn"
                        placeholder="Ex: 9780128122761" value="<%= book.isbn%>" required></td>
            </tr>
            <tr>
                <td><label for="condition" class="fw-bold">Condition:</label></td>
                <td><textarea class="align-middle p-3 mb-2 bg-light text-dark border-0 w-100" id="condition"
                        name="condition" placeholder="Pages 120-136 are missing, my dog ate them." required><%= book.condition%></textarea></td>
            </tr>
            <tr>
                <td><label for="isbn" class="fw-bold">Price:</label></td>
                <td><input class="align-middle p-3 mb-2 bg-light text-dark border-0 w-100" id="price" name="price"
                        placeholder="Ex: 1,2,19.99..." value="<%= book.price%>" required></td>
            </tr>
            <!-- <tr>
                <td class="fw-bold">Image:</td>
                <td><input class="p-2" type="file" id="file" name="filename"></td>
            </tr>-->
        </table><br><br>
        <input class="position-absolute bottom-0 end-0 text-end  btn bg-success green text-white border-0 green_hover" type="submit" value="Submit">
    </form>
</div>
    <%- include('../partials/footer.ejs')%>