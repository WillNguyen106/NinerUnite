<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--bootstrap css CDN-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <!--personal stylesheet-->
    <link href="/css/landingpageStyle.css" rel="stylesheet">
    <link href="/css/<%=cs%>.css" rel="stylesheet" type="text/css">
    <!--font awesome-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <!--font for brand name-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <title>NinerUnite</title>
</head>

<body>

    <!--header-->
    <header>

        <nav class="navbar navbar-expand-md navbar-color p-3 border-bottom  border-secondary">
            <a class="navbar-brand  brand-font fs-2 text-white" href="/">NinerUnite</a>

            <button class="navbar-toggler bg-light" data-bs-toggle="collapse" data-bs-target="#navBarHB">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!--ms-auto adds margin to the start of the nav items, p-2 adds padding, gap-2 adds a gap between the buttons-->
            <div id="navBarHB" class="collapse navbar-collapse">

                <!--d-grid makes the buttons block buttons, this can only be seen when in collapsable menu, otherwise they are in a small size-->

                <ul class="navbar-nav ms-auto gap-3">
                    <%if(!user) {%>
                        <li class="nav-item  d-grid ">
                            <a class="btn nav-bar-btn-color" href='/users/signup' id="signup">Sign Up</a>
                        </li>
                        <li class="nav-item d-grid">
                            <a class="btn nav-bar-btn-color" href='/users/login' id="login">Login</a>
                        </li>
                        <%} else {%>
                            <li class="nav-item  d-grid ">
                                <a class="btn nav-bar-btn-color" href='/users/index' id="index">Dashboard</a>
                            </li>
                            <li class="nav-item dropdown d-grid">
                                
                                <a class="btn nav-bar-btn-color dropdown-toggle" href='#' data-bs-toggle="dropdown" aria-expanded="false">Lists</a>

                                <!-- options available via dropdown-->
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href='/books' id="browseBooks">Book List</a></li>
                                    <li><a class="dropdown-item" href='/techs' id="browseTech">Tech List</a></li>  
                                    <li><a class="dropdown-item" href='/domiciles' id="browseDomiciles">Domicile List</a></li>  
                                </ul>
                            </li>
                            <li class="nav-item dropdown d-grid">
                                <a class="btn nav-bar-btn-color dropdown-toggle" href='#' data-bs-auto-close="outside" data-bs-toggle="dropdown" aria-expanded="false">Posts</a>

                                <!--main dropdown menu-->
                                <ul class="dropdown-menu">
                                    <!--submenu for types of new posts-->
                                    <li>
                                        <div class="dropend">

                                            <a class="dropdown-item dropdown-toggle" href='#' data-bs-toggle="dropdown">New Post</a>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href='/books/new' id="browseBooks">New Book Post</a></li>
                                                <li><a class="dropdown-item" href='/techs/new' id="browseTech">New Tech Post</a></li>  
                                                <li><a class="dropdown-item" href='/domiciles/new' id="browseDomiciles">New Domicile Post</a></li>  
                                            </ul>

                                        </div>
                                       
                                    
                                    </li> 

                                    <!--my posts button-->
                                    <li><a class="dropdown-item" href='/users/myPosts' id="myPosts">My Posts</a></li>  
                                </ul>
                            </li>
                            <li class="nav-item  d-grid ">
                                <a class="btn nav-bar-btn-color" href='/users/profile' id="signup"><i class="fa solid fa-user"></i></a>
                            </li>
                            <li class="nav-item d-grid ">
                                <a class="btn nav-bar-btn-color position-relative" href="/cart" id="cart">
                                    My Cart
                                    <%if(user.ItemsCount > 0){%>
                                        <!--this shows-->
                                        <span class="rounded-pill position-absolute top-0 start-100 translate-middle badge bg-danger"><%=user.ItemsCount%></span>
                                    <%}%>
                                    
                                </a>
                            </li>
                            <li class="nav-item d-grid">
                                <a class="btn nav-bar-btn-color" href='/users/logout' id="login">Logout</a>
                            </li>
                            <%}%>
                </ul>


            </div>

        </nav>

    </header>

    <!--this displays error messages-->
    <%if(errorMessages.length> 0) {
        errorMessages.forEach(message => {%>

        <div class="alert alert-warning mb-0" role="alert"> 
            <%= message%>
        </div>
        <%}); }%>
    <%if(successMessages.length> 0) {
        successMessages.forEach(message => {%>


        <div class="alert alert-success mb-0" role="alert"> 
            <%= message%>
        </div>
    <%}); }%>