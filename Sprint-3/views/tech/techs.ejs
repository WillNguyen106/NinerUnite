<%- include('../partials/header.ejs', {cs: 'listStyle'})%>

    <div class="container p-3">
        <h1>Tech List</h1>
        <br>
        <%if(techs.length){ %>

            <div class="row">
                <!--filter section of page-->
                <div class="col-md-3">
                    <div class="container border text-break sticky-top p-3">

                        <h1>Filters</h1>
                        <a class="btn btn-secondary my-2" href='/techs'>Clear Filters</a>

                        <!--accordion to minimize the filtering options-->

                        <div class="accordion" id="filterAccordion">
                            <!--accordion item #1: price filter options-->
                            <div class="accordion-item">
                                <h3 class="accordion-header">
                                    <button 
                                    class="accordion-button collapsed"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#priceFilter"
                                    aria-expanded="false"
                                    aria-controls="priceFilter"
                                    >
                                    Price
                                    </button>

                                </h3>
                                <div
                                    id="priceFilter"
                                    class="accordion-collapse collapse show"
                                    
                                >
                                        <div class="accordion-body">
                                            
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="1-100" id="priceOption1">
                                                <label class="form-check-label" for="priceOption1">
                                                    $1 - $100
                                                </label>
                                            </div>

                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="100-300" id="priceOption2">
                                                <label class="form-check-label" for="priceOption2">
                                                    $100 - $300
                                                </label>
                                            </div> 

                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="300-600" id="priceOption3">
                                                <label class="form-check-label" for="priceOption3">
                                                    $300 - $600
                                                </label>
                                            </div>

                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="600+" id="priceOption4">
                                                <label class="form-check-label" for="priceOption4">
                                                    > $600
                                                </label>
                                            </div>

                                            

                                        </div>
                                </div>

                            </div>

                            <!--accordion item #2: brand filter options-->
                            <div class="accordion-item">
                                <h3 class="accordion-header">
                                    <button
                                    class="accordion-button collapsed"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#brandFilter"
                                    aria-expanded="false"
                                    aria-controls="brandFilter"
                                    >
                                    Brand
                                    </button>

                                </h3>
                                <div
                                    id="brandFilter"
                                    class="accordion-collapse collapse"
                                    
                                >
                                <div class="accordion-body">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="brandOption1">
                                        <label class="form-check-label" for="brandOption1">
                                            Samsung
                                        </label>
                                    </div>

                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="brandOption2">
                                        <label class="form-check-label" for="brandOption2">
                                            Apple
                                        </label>
                                    </div>


                                </div>

                                </div>

                            </div>

                            <!--future accordion items go below-->

                        </div>

                        <input class="btn btn-success my-2" type="submit" value="Submit">

                    </div>

                </div>

                <!--tech list section of page-->
                <div class="col-md-9">
                    <table class="table border text-break">
                        <tr>
                            <th scope="col">Tech Name/Brand</th>
                            <th scope="col">Price</th>
        
                        </tr>
        
                    <tbody>
                    <%techs.forEach(tech=>{%>
                        <tr class="select listItem">
                            <!--brand counts for tech items name and brand-->
                            <td >
                                <a href="/techs/<%=tech.id%>"><p><%=tech.brand%></p></a>
                            </td>
                            <td>
                                <p>$<%=tech.price %></p>
                            </td>
                        </tr>
        
                    <% }); %>
        
                    </tbody>
                    </table>

                </div>

            </div>


            
            <%} else {%>
            <h2>There are no products to display</h2>
        <%} %>
    </div>

<%- include('../partials/footer.ejs')%>