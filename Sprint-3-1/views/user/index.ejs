<%- include('../partials/header.ejs', {cs: 'homepage' })%>

    <!-- Beginning of page-->
    <main>
        <!-- div separator for the background stock image. IMAGE IS LOCATED IN LANDINGPAGESTYLE.CSS! -->
        <div class="index text-center border-top border-warning border-2 p-3">
            <!--greeting message to the user-->
            <h1 class="fs-1 py-5 text-white mt-5 mb-5">Hello, <%- user.firstName%>!</h1>

            <!-- Search bar -->
            <div class="container d-flex flex-md-row flex-column w-50 my-5">


                <!--search selector-->
                <select class="form-select" id="searchSelect">
                    <option>Select</option>
                    <option value="book">Textbook/Book</option>
                    <option value="tech">Technology</option>
                    <option value="dom">Domicile</option>
                </select>

                <!--search input box and button-->
                <!--action and method are changed dynamically by index script-->
                <form id="searchForm" class="input-group" action="#" method="#">
                    <input id="searchInput" class="form-control" type="text"
                        placeholder="Select what you want to search by!" name="none">

                    <button class="btn btn-success green text-white border-0 green_hover" id="searchButton"
                        type="submit">Search</button>
                </form>

            </div>
        </div>

        <!-- About Us (short) -->
        <div class="px-5 py-3 bg-secondary text-white text-center">
            <h1 class="fs-1">Recent News</h1>
            <p>Graduation is approaching! If you would like to put up your "old" school supplies after graduation, there
                is a grace period before your account is marked as "alumni"!</p>
        </div>

        <!-- Display Dorms -->
        <!-- Link -->
        <a class="text-reset text-decoration-none" href="/domiciles">
            <div class="ptx-5 p-3 mb-2 text-center bg-light">
                <img class="img-fluid" width="100" height="100" src="/images/other/dormicon.png" alt="Icon of a laptop">
                <h1 class="mt-3 fs-1">Want to Move Closer to Campus?</h1>
                <p>View the roommate requests available just a few minutes from campus!</p>
            </div>
        </a>
        <!-- Display Textbooks -->
        <!-- Link -->
        <a class="text-reset text-decoration-none" href="/books">
            <div class="px-5 p-3 mb-2 text-center">
                <img class="img-fluid" width="100" height="100" src="/images/other/bookicon.png" alt="Icon of a book">
                <h1 class="mt-3 fs-1">Need a Book?</h1>
                <p>NinersUnite has access to over <%=books.length %> textbooks! Use the search bar to get started.</p>
            </div>
        </a>
        <!-- Display Technology -->
        <!-- Link -->
        <a class="text-reset text-decoration-none" href="/techs">
            <div class="ptx-5 p-3 mb-2 text-center bg-light">
                <img class="img-fluid" width="100" height="100" src="/images/other/laptopicon.png"
                    alt="Icon of a laptop">
                <h1 class="mt-3 fs-1">Looking for a New Laptop?</h1>
                <p>Whether you are a hardcore coder, or casual browser, NinerUnite can get you that perfect used
                    computer!
                    Use the search bar to find used technology!</p>
            </div>
        </a>

        <br>
    </main>
    <script src="/javascript/searchBarFunctionality.js"></script>
    <!-- End of Page -->

